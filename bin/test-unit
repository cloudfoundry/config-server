#!/bin/bash

set -e

bin=$(dirname "${0}")

"${bin}/lint"

echo -e "\n Running unit tests..."
"${bin}/env" go run github.com/onsi/ginkgo/ginkgo -r -race -trace -skipPackage="acceptance,integration,vendor" $@

